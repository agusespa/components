{
    "printWidth": 100,
    "tabWidth": 4,
    "arrowParens": "avoid",
    "bracketSpacing": true,
    "singleQuote": true,
    "bracketSameLine": true,
    "trailingComma": "es5",
    "endOfLine": "auto",
    "overrides": [
        {
            "files": "*.ts",
            "options": {
                "parser": "typescript"
            }
        },
        {
            "files": ["*.json", ".*.json"],
            "options": {
                "parser": "json"
            }
        },
        {
            "files": ["*.md", "LICENSE"],
            "options": {
                "parser": "markdown"
            }
        },
        {
            "files": "*.css",
            "options": {
                "parser": "css"
            }
        }
    ]
}
